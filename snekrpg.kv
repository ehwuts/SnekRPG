#:kivy 1.10.0

<SnekRPG>: 
	player: player_id
	SnekPlayer:
		id: player_id
		center: self.parent.center
    Label:
        font_size: 10  
        center_x: root.width / 4
        top: root.top - 40
        text: str(root.player.pos)
    Label:
        font_size: 10  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player.moveto)
    Label:
        font_size: 10  
        center_x: root.width / 4
        top: root.top - 60
        text: str(root.player.lastmove)
    Label:
        font_size: 10  
        center_x: root.width / 4
        top: root.top - 70
        text: str(root.player.last)
	
<SnekPlayer>:
	size: 32, 32
	canvas:
		Rectangle:
			source: 'images/snek.png'
			pos: self.pos
			size: self.size
	