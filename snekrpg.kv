#:kivy 1.10.0

<SnekRPG>: 
	player: player_id
	mainmenu: menu_id
	SnekPlayer:
		id: player_id
		center: self.parent.center
    Label:
        font_size: 10  
        center_x: root.width / 4
        top: root.top - 30
        text: str(root.player.floatpos)
    Label:
        font_size: 10  
        center_x: root.width / 4
        top: root.top - 40
        text: str(root.player.pos)
    Label:
        font_size: 10  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player.destination)
	MainMenu:
		id: menu_id
		center: self.parent.center
	
<SnekPlayer>:
	canvas:
		Rectangle:
			source: 'images/snek.png'
			pos: self.pos
			size: self.size
<MainMenu>
	size: 200, 600
	menu1: menu1_id
	menu2: menu2_id
	menu_exit: menu_exit_id
	GridLayout:
		rows: 3
		cols: 1
		padding: 10
		spacing: 10
		Button:
			id: menu1_id
			text: 'First Button'
		Button:
			id: menu2_id
			text: 'Second Button'
		Button:
			id: menu_exit_id
			text: 'Exit'