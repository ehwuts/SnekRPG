#:kivy 1.10.0

<SnekRPG>: 
	player: player_id
	mainmenu: mainmenu_id
	MainMenu:
		id: mainmenu_id
		center: self.parent.center
	SnekPlayer:
		id: player_id
		center: self.parent.center
	Label:
		font_size: 10
		center_x: root.width / 4
		top: root.top - 30
		text: str(root.player.floatpos)
	Label:
		font_size: 10
		center_x: root.width / 4
		top: root.top - 40
		text: str(root.player.pos)
	Label:
		font_size: 10
		center_x: root.width / 4
		top: root.top - 50
		text: str(root.player.destination)
	
<SnekPlayer>:
	size: 32, 32
	canvas:
		Rectangle:
			source: 'images/snek.png'
			pos: self.pos
			size: self.size
			
<MainMenu>:
	menu1: menu1_id
	menu2: menu2_id
	menu_exit: menu_exit_id
	center: self.parent.center
	GridLayout:
		pos: self.parent.pos
		rows: 3
		cols: 1
		padding: 10
		spacing: 10
		Button:
			id: menu1_id
			text: 'First Button'
		Button:
			id: menu2_id
			text: 'Second Button'
		Button:
			id: menu_exit_id
			text: 'Exit'
	